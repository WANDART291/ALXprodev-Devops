#!/bin/bash
# Script to fetch data for Pikachu and save it to a JSON file

API_URL="https://pokeapi.co/api/v2/pokemon/pikachu"
OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"

# Make API request
curl -s -w "%{http_code}" -o "$OUTPUT_FILE" "$API_URL" | grep -q "200"

# Check if the request was successful
if [ $? -eq 0 ]; then
    echo "✅ Successfully fetched Pikachu data and saved to $OUTPUT_FILE"
else
    echo "❌ Failed to fetch data from API" >> "$ERROR_FILE"
fi
