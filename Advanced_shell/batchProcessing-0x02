#!/bin/bash
# Fetch data for multiple Pokémon and save in a folder

POKEMONS=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")
FOLDER="pokemon_data"
mkdir -p "$FOLDER"

for POKEMON in "${POKEMONS[@]}"; do
    echo "Fetching data for $POKEMON..."
    HTTP_STATUS=$(curl -s -o "$FOLDER/$POKEMON.json" -w "%{http_code}" "https://pokeapi.co/api/v2/pokemon/$POKEMON")

    if [ "$HTTP_STATUS" -eq 200 ]; then
        echo "Saved data to $FOLDER/$POKEMON.json ✅"
    else
        echo "❌ Error fetching $POKEMON (status $HTTP_STATUS)" >> errors.txt
    fi

    sleep 2
done
