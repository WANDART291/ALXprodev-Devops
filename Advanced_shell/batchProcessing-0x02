```bash
#!/bin/bash

# Batch Processing Script - 0x02
# Fetches data for multiple Pokémon and retries up to 3 times if the request fails.

POKEMONS=("pikachu" "bulbasaur" "charmander" "squirtle")

for pokemon in "${POKEMONS[@]}"; do
    echo "🔍 Fetching data for $pokemon..."
    success=false

    for attempt in {1..3}; do
        response=$(curl -s -w "%{http_code}" -o data.json "https://pokeapi.co/api/v2/pokemon/$pokemon")
        http_code=${response: -3}

        if [ "$http_code" -eq 200 ]; then
            echo "✅ Successfully fetched data for $pokemon"
            success=true
            break
        else
            echo "⚠️ Attempt $attempt failed for $pokemon (HTTP $http_code)"
            sleep 1
        fi
    done

    if [ "$success" = false ]; then
        echo "❌ Failed to fetch data for $pokemon after 3 attempts."
        echo "$pokemon" >> failed_requests.log
    fi

    echo "-----------------------------------"
done

echo "Batch processing complete."
```

